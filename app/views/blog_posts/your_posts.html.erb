<div class= "row">
  <% current_user.blog_post.each do |blog_post| %>
  <div class="col-md-12">
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to blog_post.title, blog_post %></h3>
  </div>
  <div class="panel-body">
        By: <%= blog_post.user.username %> posted at: <%= blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p')%>
        <p><%= blog_post.blog_entry[0..250] %>...[<%= link_to 'Read More', blog_post %>] </p>
        
  </div>
  <div class="panel-footer">
        <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-warning" %>  
        <%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
</div>
<% end %>
</div>